<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Rankings"
            android:layout_width="157dp"
            android:layout_height="40dp" android:id="@+id/rankingsButton"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tdfImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp" android:layout_marginEnd="33dp" android:layout_marginRight="33dp"
            app:layout_constraintTop_toBottomOf="@+id/raceCenterButton"/><![CDATA[
    />
    ]]>
    <Button
            android:text="Race Center"
            android:layout_width="157dp"
            android:layout_height="40dp" android:id="@+id/raceCenterButton"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/viewProfileButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp" android:layout_marginEnd="33dp" android:layout_marginRight="33dp"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="Stage:"
            android:layout_width="60dp"
            android:layout_height="27dp" android:id="@+id/textView"
            android:textSize="18sp"
            android:background="#00FFFFFF"
            android:layout_marginTop="37dp"
            app:layout_constraintEnd_toStartOf="@+id/stage" android:layout_marginBottom="168dp"
            app:layout_constraintBottom_toTopOf="@+id/tdfImage" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:textColor="@color/colorTitleText"/>
    <EditText
            android:layout_width="45dp"
            android:layout_height="28dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/stage"
            android:hint="Stage"
            android:background="#4AFFFFFF"
            android:layout_marginTop="34dp"
            app:layout_constraintEnd_toStartOf="@+id/viewProfileButton" android:layout_marginBottom="169dp"
            app:layout_constraintBottom_toTopOf="@+id/tdfImage" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="111dp"
            android:layout_marginStart="111dp" android:layout_marginEnd="9dp" android:layout_marginRight="9dp"/>
    <Button
            android:text="Stage Profile"
            android:layout_width="194dp"
            android:layout_height="40dp" android:id="@+id/viewProfileButton"
            android:textStyle="bold"
            android:layout_marginTop="29dp"
            app:layout_constraintStart_toEndOf="@+id/stage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/raceCenterButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@drawable/img"
            android:id="@+id/tdfImage"
            app:layout_constraintTop_toBottomOf="@+id/stage" android:layout_marginBottom="232dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="28dp" android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
            app:srcCompat="@drawable/img"/>

</androidx.constraintlayout.widget.ConstraintLayout>